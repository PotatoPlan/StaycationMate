@{
    ViewBag.Title = "Home";
}

@Scripts.Render("~/bundles/jquery")

<style>
    .jumbotron {
        background: url("../../Content/victoria.jpg") no-repeat center center;
        background-size: cover;
        height: 50rem;
    }

    .img-responsive {
        height: 13rem;
        border-radius: 20px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);
    }
</style>

<div class="jumbotron">
    <h1>Staycation Mate</h1>
    <p class="lead">Enjoy your time in Victoria this holiday season.</p>
</div>

<div class="row center-block">
    <div class="col-md-3">
        <img class="img-responsive" src="~/Content/melbourne.jpg" alt="Melbourne, Victoria" />
        <h4 style="margin-top: 1.5rem">Melbourne</h4>
        <button style="width: 100%" id="melbourne" class="btn btn-primary">Get current weather</button>
        <h5 id="melbourneTemperature"></h5>
        <h5 id="melbourneFeelsLike"></h5>
        <h5 id="melbourneDescription"></h5>
        <h5 id="melbourneHumidity"></h5>
    </div>

    <div class="col-md-3">
        <img class="img-responsive" src="~/Content/geelong.jpg" alt="Geelong, Victoria" />
